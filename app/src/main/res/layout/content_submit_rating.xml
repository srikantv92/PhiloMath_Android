<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:showIn="@layout/activity_submit_rating"
    tools:context="com.example.srikant.philomath.SubmitRating">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        >

    <TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Professor Name:"
        android:textSize="40px"
        android:textStyle="bold"

    />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20px"
            android:text="Professor Name"
            android:textSize="40px"
            android:id="@+id/prof_name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Course Name:"
            android:textSize="40px"
            android:textStyle="bold"

            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20px"
            android:textSize="40px"
            android:text="Course Name"
            android:id="@+id/course_name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Clarity:"

            android:textSize="40px"
            android:textStyle="bold"

            android:id="@+id/textView" />
        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:clickable="true"
            android:gravity="left"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="5"

            android:id="@+id/rating_clarity"

            android:layout_toEndOf="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Helpfulness:"
            android:textSize="40px"
            android:textStyle="bold"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:clickable="true"
            android:gravity="left"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="5"
            android:id="@+id/rating_helpful" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Easiness:"
            android:textSize="40px"
            android:textStyle="bold"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:clickable="true"
            android:gravity="left"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="5"
            android:id="@+id/rating_easiness" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Overall:"
            android:textSize="40px"
            android:textStyle="bold"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:clickable="true"
            android:gravity="left"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="5"
            android:id="@+id/rating_overall" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit!"
        android:layout_gravity="center"
       android:layout_marginTop="5dp"
        android:background="#ff99cc00"
        android:id="@+id/submitRating"
        />

</LinearLayout>
