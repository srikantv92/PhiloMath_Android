<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/back"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:isScrollContainer="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tutor__profile"
    tools:context="com.example.srikant.philomath.Tutor_Profile">
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tutorName"
    android:text="Abrar Profile"
    android:textStyle="bold"
    android:textSize="60px"
    />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"


        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="Phone Number:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingRight="5px"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:id="@+id/tutorPhone"
            android:paddingTop="20px"
            android:textSize="50px"

            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@drawable/sms"
            android:gravity="right"
            android:clickable="true"
            android:id="@+id/smsTutor"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@drawable/phone"
            android:gravity="right"
            android:clickable="true"
            android:id="@+id/CallTutor"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx@gmail.com"
            android:id="@+id/tutorEmail"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@drawable/gmail"
            android:id="@+id/EmailTutor"
            android:gravity="right"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorAddress"
            android:text="715 Border Place, Apt #3, Arlington, TX - 76013"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@drawable/map"
            android:id="@+id/LocateTutor"
            android:gravity="right"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"

       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Development"
            android:id="@+id/tutorCourse"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"

       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorTravel"
            android:text="Not Willing to travel"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />
   </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"

       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorAvailability"
            android:text="Tuesdays and Thursdays"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"

        android:paddingBottom="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pricing:"
            android:textStyle="bold"
            android:textSize="50px"
            android:paddingTop="20px"
            android:paddingRight="15px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorPricing"
            android:text="$100 per hour"
            android:textSize="50px"
            android:paddingTop="20px"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="50px"

            android:paddingRight="5dp"
            android:text="Rating:"

            />

        <RatingBar
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:rating="5"
            android:id="@+id/ratingTutor"
            android:layout_weight="0.03" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumOfVotesTutor"
            android:text="(8 Votes)"

            />

    </LinearLayout>
    </LinearLayout>

</ScrollView>